@model Life_CycleRentals.Models.Bike

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li> <img src="@Url.Content(Model.Picture)" alt="Bike"/></li>
    <li> Style: @Model.Style.Name</li>
    <li> Build Date: @Model.YearBuilt.Year</li>
    <li> Date Added: @Model.DateAdded.ToLongDateString()</li>
    <li> Number in Stock: @Model.NumberInStock</li>
</ul>

