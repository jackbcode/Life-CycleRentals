
@model Life_CycleRentals.ViewModels.RandomBikeViewModel




@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@{

    var className = Model.Customers.Count > 5 ? "popular" : null;

}

<h2>Random</h2>

<h2 class="@className">@Model.Bike.Name</h2>


@if (Model.Customers.Count == 0)
{
    <p>This is the first time this bike has been rented, Lucky you! </p>
}

else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }

    </ul>
}


